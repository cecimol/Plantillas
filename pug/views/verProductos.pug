block body
  div(class="row")
    div(class="col-4") &nbsp;
    div(class="col-4")
      if productos
        h1 Productos
        table(class="table table-striped")
          thead
            tr
              th(scope="col") TÃ­tulo
              th(scope="col") Precio
              th(scope="col") Imagen
